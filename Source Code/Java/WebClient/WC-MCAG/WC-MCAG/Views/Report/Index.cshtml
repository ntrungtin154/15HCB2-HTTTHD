                    <div class="input-append date">
                        <input type="text" width="150" id="datepicker_ngay"><span class="add-on" id="lich"><i class="icon-th"></i></span>
                    </div>
                </div>              
            </div>
            <div style="clear: both"></div>
        </div>
        <div ng-show="isOther == 1">
            <div style="width: 400px; float:left" >
